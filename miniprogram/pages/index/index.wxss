/* miniprogram/pages/index/index.wxss */
.new-item{
    width: 80%;
    margin: 40rpx auto;
    background-color: #ffffff;
    height: 200rpx;
    display: flex;
    justify-content: space-between;
    padding: 20rpx;
    text-align: center;
    box-shadow: 0px 7px 20px gray;
    border-radius: 38rpx; 
}

.new-item image{
    width: 124rpx;
    height: 124rpx;
    align-self: center;
}

.right-conner{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.right-conner .item-name{
    margin-right: 14rpx;
}

.right-conner .iocn-arrow{
    text-align: right;
    padding-right: 13rpx;
}

.new-item:hover{
    box-shadow: none;
    border: 1rpx solid gray;
}
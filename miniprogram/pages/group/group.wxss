/* miniprogram/pages/group/group.wxss */
page{
    height:100%;
    background-color: #eeeeee;
}
.container{
    padding:40rpx 0;
    box-sizing: border-box;
}

.group-list{
    width: 90%;
    margin: 50rpx auto;
    padding: 10rpx 0 10rpx 0;
    border-radius: 20rpx;
    box-sizing: border-box;
    background-color: white;
}

.title{
    width: 100%;
    height: 100rpx;
    display: flex;
    align-items: center;
    margin: 0 auto;
}
.title image{
    width: 60rpx;
    height: 60rpx;
    margin-left: 30rpx;
    margin-right: 30rpx;
}
.title text{
    font-size: 40rpx;
    font-weight: bold;
}

.cell{
    position: relative;
    width: 100%;
    height: 100rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.cell::after{
    content: '';
    position: absolute;
    width: 100%;
    height: 1rpx;
    background-color: gray;
    transform: scaleY(0.3);
    left: 0;
    top: 0;
}

.cell text{
    margin-left: 30rpx;
}

.rightContainer{
    display: flex;
    align-items: center;
    margin-right: 30rpx;
}

.userinfo-avatar{
    width: 80rpx;
    height: 80rpx;
    overflow: hidden;
    border-radius: 50%;
}  
